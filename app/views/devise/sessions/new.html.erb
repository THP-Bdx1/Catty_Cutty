<div class="col-lg-9">
<h2 class="mt-3 title-amatic">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group-row mt-2">
    <%= f.label :"email_:", class: "col-lg-2" %>
    <div class="col-lg-5">
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
  </div>
  </div>

  <div class="form-group-row mt-2">
    <%= f.label :"password_:", class: "col-lg-2" %>
    <div class="col-lg-5">
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
  </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group-row mt-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions mt-2 ml-4">
    <%= f.submit "Log in", class: "btn amado-btn" %>
  </div>
<% end %>

<div class="mt-4">
<%= render "devise/shared/links" %>
</div>

</div>
