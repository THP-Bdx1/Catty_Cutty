<div id="esai">
<% if @favorite == nil %>
    <%= link_to fav_path(user_id: current_user.id, item_id: @item.id), remote: true do %>
    <i class="fa fa-heart unfavored fa-2x" aria-hidden="true"></i>
        <% end %>
    <% else %>
    <%= link_to unfav_path(user_id: current_user.id, item_id: @item.id), remote: true do %>
<i class="fa fa-heart favred fa-2x" aria-hidden="true"></i>
        <% end %>
<% end %>
</div>