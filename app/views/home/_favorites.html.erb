<% if @favorite == nil %>
<i class="fa fa-heart" aria-hidden="true">
    <%= link_to "Add to favorites", fav_path(user_id: current_user.id, item_id: @item.id), remote: true%></i>
<% else %>
    <% @favorites.each do |fav| %>
        <% if fav.user_id =! current_user.id && fav.item_id != @item.id %>
            <i class="fa fa-heart" aria-hidden="true"> <%= link_to "Add to favorites", fav_path(user_id: current_user.id, item_id: @item.id), remote: true%></i>
        <% else %>
            <i class="fa fa-heart" aria-hidden="true">
        <%= link_to "Remove from favorites", fav_path(user_id: current_user.id, item_id: @item.id), remote: true%></i>
        <% end %>
    <% end %>
<% end %>