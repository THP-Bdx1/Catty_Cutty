<div class="col-lg-12">
  <div class="clearfix d-flex flex-row flex-wrap">
      <% @favoris.each do |favor| %>
          <% if current_user.id == favor.user_id %>
                  <% @items.each do |item| %>
                      <% if favor.item_id == item.id %>
                          <div class="single-products-catagory clearfix">
                              <a href="/product/<%=item.id%>">
                                  <div class="cropped">
                                      <% if item.catimage.attachment != nil %>
                                          <%= image_tag item.catimage %>
                                      <% else %>
                                          <img src="<%=item.image_url%>" alt="product image">
                                      <% end %>
                                  </div>
                                  <div class="hover-content">
                                    <div class="line"></div>
                                      <p>From <%=item.price%>$</p>
                                      <h4><%= item.title %></h4>
                                  </div>
                              </a>
                            </div>
                      <% end %>
                  <% end %>
          <% end %>
      <% end %>
  </div>
</div>
