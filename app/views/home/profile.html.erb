<div class="col-lg-9">
  <div class="row">
    <div class="col-lg-12">
      <ul class="float-right m-4">
          <li><img class="mb-2" style="height:150px; width:auto;" src="<%=current_user.avatar%>"></li>
          <li><h2><%=current_user.nickname%></h2></li>
          <li><h3><%=current_user.email%></h3></li>
      </ul>
    </div>
  </div>
<div class="row">
  <div class="col-lg-12">
    <h2>MY ORDERS</h2>
  </div>
</div>

<%current_user.orders.each do |order|%>
<div class="row cart-table clearfix mt-3">
  <table class="table table-responsive">
    <thead>
      <tr>
        <h3><%= order.created_at %></h3>
        <th></th>
        <th>Name</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <%order.items.each do |item|%>
        <tr>
          <td class="cart_product_img">
            <a href="/product/<%=item.id%>"><img style="height:40px ; width:40px;" src="<%=item.image_url%>" alt="product image"></a>
          </td>
          <td class="cart_product_desc">
            <h5><%=item.title%></h5>
          </td>
          <td class="price">
            <span>$<%=item.price%></span>
          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
<%end%>

</div>
