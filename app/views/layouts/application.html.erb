      <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>">
        <%= message %>
      </div>
      <% end %>
    <%=render "layouts/modalconnection"%>
    <%=render "layouts/modalinscription"%>
    <%= render "layouts/search-wrapper" %>
    <br>
    <div class="main-content-wrapper d-flex clearfix alignons">
      <%= render "layouts/mobile-nav" %>
      <%= render "layouts/header" %>
        <div class="col-lg-12">
          <h1 class="website-title">
            <img class="title-pic" src="http://www.cndajin.com/data/wls/7/3817028.gif">
            Kittypics
          </h1>
        </div>
      <div class="col-lg-3">
      </div>
      <div class="col-lg-9">
        <%= yield %>
      </div>
    </div>
  <%= render "layouts/footer"%>
  </body>
</html>
