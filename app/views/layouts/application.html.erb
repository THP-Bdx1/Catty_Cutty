<!DOCTYPE html>
<html>
  <head>
    <title>CuttyCat</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%=render "layouts/modalconnection"%>
    <%=render "layouts/modalinscription"%>
    <%= render "layouts/search-wrapper" %>
    <br>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>">
        <%= message %>
      </div>
    <% end %>
    <div class="main-content-wrapper d-flex clearfix alignons">
      <%= render "layouts/mobile-nav" %>
      <%= render "layouts/header" %>
      <div class="col-lg-3">
      </div>
      <div class="col-lg-9">
        <%= yield %>
      </div>
    </div>
  </body>
  <footer class="footer_area clearfix">
    <%= render "layouts/footer"%>
  </footer>  
</html>
