

<div class="modal2">
  <div class="modal__header bg-warning d-flex justify-content-between">
    <h2 class="mt-1 ml-2">Log in</h2>
    <button class="mr-2 close js-close-modal2">X</button>
  <% if devise_mapping.rememberable? -%>
    <div class="field mt-1">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions mt-2">
    <%= f.submit "Log in", class: "btn btn-sm btn-success"  %>
  </div>
<% end %>

</div>
